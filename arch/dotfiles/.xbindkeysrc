# I don't actually use this anymore. All my keybindings are in 
# ~/.config/awesome/rc.lua so I can update widget states without
# any timers/watchers.
"xbindkeys_show" 
  control+shift + q

# Volume
"/usr/bin/amixer set Master 5%+"
    XF86AudioRaiseVolume

"/usr/bin/amixer set Master 5%-"
    XF86AudioLowerVolume

"/usr/bin/amixer set Master toggle"
    XF86AudioMute

# LCD brightness
"/usr/bin/light -U 5"
    m:0x0 + c:232
    XF86MonBrightnessDown

"/usr/bin/light -A 5"
    m:0x0 + c:233
    XF86MonBrightnessUp

